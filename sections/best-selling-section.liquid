<section>
  <div class="container">
    <div class="selling-title text-center">
      <h2 class="font-roboto-slab fw-medium fs-2 font-primary text-center pt-80 pt-sm-80 pt-md-80">
        {{ section.settings.heading }}
      </h2>
      <p class="font-poppins fw-medium fs-8 font-primary text-center">
        {{ section.settings.description }}
      </p>
    </div>

    <div class="row main-selling col-12 align-items-stretch justify-content-center mt-80 mt-sm-80 mt-md-80">
      {% for block in section.blocks %}
        <div class="col-4">
          <div class="selling-img bg-secondary-dark {{ block.settings.bg_color }}">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 600 }}"
                alt="Selling image"
                class="img-fluid d-block w-100"
                width=""
                height=""
              >
            {% endif %}
          </div>

          <div class="selling-con text-center">
            <p class="font-poppins fw-semibold fs-8 titile-color">
              {{ block.settings.title }}
            </p>

            <div class="best-price d-flex align-items-center justify-content-center pt-2">
              <div class="col-4 price-left-con d-flex justify-content-center border-end">
                <p class="font-poppins fw-medium fs-8 price-color">
                  {{ block.settings.price }}
                </p>
              </div>

              <div class="d-flex col-4 justify-content-center gap-2 align-items-center">
                <p class="font-poppins fw-medium fs-8 price-color">
                  {{ block.settings.rating }}
                </p>

                <svg width="24" height="24" viewBox="0 0 24 24" fill="none"
                  xmlns="http://www.w3.org/2000/svg">
                  <path
                    d="M19.4672 23.194L12.0002 17.706L4.53323 23.194L7.40023 14.331L-0.0627747 8.878H9.15123L12.0002 0L14.8492 8.878H24.0622L16.6002 14.331L19.4672 23.194Z"
                    fill="#F5D426" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="see-all-btn text-center d-flex justify-content-center">
      <a href="{{ section.settings.button_link }}" class="text-decoration-none ">
        <button class="btn-third font-poppins fw-medium fs-8 d-flex gap-3 align-items-center">
          {{ section.settings.button_text }}
          <svg width="24" height="15" viewBox="0 0 24 15" fill="none"
            xmlns="http://www.w3.org/2000/svg">
            <path
              d="M23.7071 8.07112C24.0976 7.6806 24.0976 7.04743 23.7071 6.65691L17.3431 0.292946C16.9526 -0.0975785 16.3195 -0.0975785 15.9289 0.292946C15.5384 0.68347 15.5384 1.31664 15.9289 1.70716L21.5858 7.36401L15.9289 13.0209C15.5384 13.4114 15.5384 14.0446 15.9289 14.4351C16.3195 14.8256 16.9526 14.8256 17.3431 14.4351L23.7071 8.07112ZM0 8.36401L23 8.36401V6.36401L0 6.36401L0 8.36401Z"
              fill="#224F34" />
          </svg>
        </button>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Best Selling Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Best selling"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Get in on the trend with our curated selection of best-selling styles."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "See all"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "product_card",
      "name": "Product Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Product image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Product title",
          "default": "Regular Fit Long Sleeve Top"
        },
        {
          "type": "text",
          "id": "price",
          "label": "Price",
          "default": "$38.99"
        },
        {
          "type": "text",
          "id": "rating",
          "label": "Rating",
          "default": "5.0"
        },
        {
          "type": "text",
          "id": "bg_color",
          "label": "Background class",
          "default": "bg-secondary-dark"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Best Selling",
      "blocks": [
        { "type": "product_card" },
        { "type": "product_card" },
        { "type": "product_card" }
      ]
    }
  ]
}
{% endschema %}
