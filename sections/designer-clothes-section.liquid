<section>
  <div class="container designer-title text-center">

    <!-- TITLE -->
    <h2 class="font-roboto-slab fw-medium fs-3 font-primary pt-80 pt-sm-80 pt-md-80">
      {{ section.settings.heading }}
    </h2>

    <p class="font-poppins fw-medium fs-8 font-primary">
      {{ section.settings.subheading }}
    </p>

    <!-- DESIGNER CARDS -->
    <div class="row designer-row g-0 align-items-stretch justify-content-center">

      {% for block in section.blocks %}
        <div class="col-4 designer-col">
          <div class="designer-card {{ block.settings.bg_class }}">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url }}"
                width=""
                height=""
                alt="{{ block.settings.title }}">
            {% endif %}
          </div>

          <div class="designer-card-con">
            <h3 class="font-poppins fw-semibold fs-6 titile-color">
              {{ block.settings.title }}
            </h3>
            <p class="font-poppins fw-medium fs-8 titile-color">
              {{ block.settings.description }}
            </p>
          </div>
        </div>
      {% endfor %}

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Designer Clothes Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Designer Clothes For You"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Sub Heading",
      "default": "Immerse yourself in the world of luxury fashion with our meticulously crafted designer clothes!"
    }
  ],
  "blocks": [
    {
      "type": "designer_item",
      "name": "Designer Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Accessories"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "bg_class",
          "label": "Background Class (EXACT class name)",
          "default": "bg-primary"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Designer Clothes"
    }
  ]
}
{% endschema %}