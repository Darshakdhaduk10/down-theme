                    fill="#224F34" />
                </svg>

                <h4 class="font-roboto-serif fw-semibold fs-8 font-primary">
                  {{ block.settings.name }}
                </h4>

                <p class="font-poppins fw-medium fs-16 grey-color">
                  {{ block.settings.message }}
                </p>
              </div>
            </div>
          {% endfor %}
        </div>

        {% comment %} <div class="swiper-controls">
          <span class="swiper-button-prev custom-arrow"></span>
          <span class="swiper-button-next custom-arrow"></span>
        </div> {% endcomment %}

        <div class="swiper-controls">
          <span class="swiper-button-prev custom-arrow">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M15 18L9 12L15 6" stroke="#224f34" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        
          <span class="swiper-button-next custom-arrow">
            <svg viewBox="0 0 24 24" fill="none">
              <path d="M9 6L15 12L9 18" stroke="#224f34" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
        </div>
        
      </div>
    </div>
  </div>
</section>

<!-- Swiper JS -->
{{ 'swiper-bundle.min.js' | asset_url | script_tag }}

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const feedbackSwiper = new Swiper('.feedback-swiper', {
      loop: true, // false ને true કરો
      spaceBetween: 17,
      autoplay: { 
        delay: 3000,
        disableOnInteraction: false,
      },
      navigation: {
        nextEl: '.feedback-swiper .swiper-button-next',
        prevEl: '.feedback-swiper .swiper-button-prev',
      },
      breakpoints: {
        0: { slidesPerView: 1 },
        768: { slidesPerView: 2 },
        992: { slidesPerView: 3 },
      },
    });
  });
</script>

{% schema %}
{
  "name": "Feedback Corner Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Feedback Corner"
    }
  ],
  "blocks": [
    {
      "type": "feedback",
      "name": "Feedback",
      "settings": [
        {
          "type": "text",
          "id": "name",
          "label": "Customer Name",
          "default": "Emily Wilson"
        },
        {
          "type": "textarea",
          "id": "message",
          "label": "Feedback Message"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feedback Corner Slider"
    }
  ]
}
{% endschema %}