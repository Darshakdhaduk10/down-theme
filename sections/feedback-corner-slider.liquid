<section>
  <div class="container">
    <h2
      class="font-roboto-slab fw-medium fs-3 font-primary Feedback-title pt-80 pt-sm-80 pt-md-80 text-center"
    >
      {{ section.settings.heading }}
    </h2>

    <div class="row">
      <div class="swiper feedback-swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div class="col-4 swiper-slide feedback-card">
              <div class="col-12 feedback-card-con bg-white">
                <svg
                  width="23"
                  height="18"
                  viewBox="0 0 23 18"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
