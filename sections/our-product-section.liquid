<section>
  <div class="container">

    <!-- TITLE -->
    <div class="our-product-title pt-80 pt-sm-80 pt-md-80">
      <h2 class="font-roboto-slab fw-medium fs-3 font-primary text-center">
        {{ section.settings.heading }}
      </h2>
    </div>

    <!-- TABS -->
    <div class="product-deil">
      <ul class="d-flex flex-wrap col-12 justify-content-center">
        <li class="font-poppins fs-8 list-unstyled">
          <a href="#sale-tab" class="text-decoration-none titile-color active" data-toggle="tab">Sale</a>
        </li>
        <li class="font-poppins fs-8 list-unstyled">
          <a href="#hot-tab" class="text-decoration-none titile-color" data-toggle="tab">Hot</a>
        </li>
        <li class="font-poppins fs-8 list-unstyled">
          <a href="#new-tab" class="text-decoration-none titile-color" data-toggle="tab">New Arrivals</a>
        </li>
        <li class="font-poppins fs-8 list-unstyled">
          <a href="#accessories-tab" class="text-decoration-none titile-color" data-toggle="tab">Accessories</a>
        </li>
      </ul>
    </div>

    <!-- SALE -->
    <div class="row main-product col-12 align-items-stretch show" id="sale-tab">
      {% for block in section.blocks %}
        {% if block.settings.tab == 'sale' %}
        <div class="col-3" {{ block.shopify_attributes }}>
          <div class="product-img">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url }}" class="img-fluid d-block w-100">
            {% endif %}
          </div>
          <div class="product-con text-center">
            <p class="font-poppins fw-semibold fs-8 titile-color">
              {{ block.settings.title }}
            </p>
          </div>
        </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- HOT -->
    <div class="row main-product col-12 align-items-stretch" id="hot-tab">
      {% for block in section.blocks %}
        {% if block.settings.tab == 'hot' %}
        <div class="col-3" {{ block.shopify_attributes }}>
          <div class="product-img">
            <img src="{{ block.settings.image | image_url }}" class="img-fluid d-block w-100">
          </div>
          <div class="product-con text-center">
            <p class="font-poppins fw-semibold fs-8 titile-color">
              {{ block.settings.title }}
            </p>
          </div>
        </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- NEW -->
    <div class="row main-product col-12 align-items-stretch" id="new-tab">
      {% for block in section.blocks %}
        {% if block.settings.tab == 'new' %}
        <div class="col-3" {{ block.shopify_attributes }}>
          <div class="product-img">
            <img src="{{ block.settings.image | image_url }}" class="img-fluid d-block w-100">
          </div>
          <div class="product-con text-center">
            <p class="font-poppins fw-semibold fs-8 titile-color">
              {{ block.settings.title }}
            </p>
          </div>
        </div>
        {% endif %}
      {% endfor %}
    </div>

    <!-- ACCESSORIES -->
    <div class="row main-product col-12 align-items-stretch" id="accessories-tab">
      {% for block in section.blocks %}
        {% if block.settings.tab == 'accessories' %}
        <div class="col-3" {{ block.shopify_attributes }}>
          <div class="product-img">
            <img src="{{ block.settings.image | image_url }}" class="img-fluid d-block w-100">
          </div>
          <div class="product-con text-center">
            <p class="font-poppins fw-semibold fs-8 titile-color">
              {{ block.settings.title }}
            </p>
          </div>
        </div>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</section>

